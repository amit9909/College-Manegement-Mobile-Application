<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bit_bg"
    android:orientation="vertical"
    tools:context=".BitAdminMainActivity">

    <TextView
        android:id="@+id/add_student_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Update Student Detail"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ud_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ud_name"
        android:layout_width="337dp"
        android:layout_height="48dp"
        android:layout_marginBottom="36dp"
        android:background="#3fffffff"
        android:drawableLeft="@drawable/name_icon"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="text"
        android:paddingLeft="10sp"
        app:layout_constraintBottom_toTopOf="@+id/ud_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/ud_email"
        android:layout_width="337dp"
        android:layout_height="48dp"
        android:layout_marginBottom="36dp"
        android:background="#3fffffff"
        android:drawableLeft="@drawable/email_icon"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10sp"
        app:layout_constraintBottom_toTopOf="@+id/ud_roll_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/ud_roll_number"
        android:layout_width="337dp"
        android:layout_height="48dp"
        android:layout_marginBottom="52dp"
        android:background="#3fffffff"
        android:drawableLeft="@drawable/roll_number_icon"
        android:ems="10"
        android:hint="Roll Number"
        android:inputType="number"
        android:paddingLeft="10sp"
        app:layout_constraintBottom_toTopOf="@+id/update_student_btn"
        tools:layout_editor_absoluteX="47dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/update_student_btn"
        android:layout_width="304dp"
        android:layout_height="56dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/student_sign_up_round_button"
        android:text="update"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>