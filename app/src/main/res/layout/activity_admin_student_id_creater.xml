<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bit_bg"
    android:orientation="vertical"
    tools:context=".BitAdminMainActivity">

  <TextView
      android:id="@+id/add_student_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="88dp"
      android:text="Add new Student Data"
      android:textColor="@color/black"
      android:textSize="30sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/add_name"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/add_name"
      android:layout_width="337dp"
      android:layout_height="48dp"
      android:layout_marginBottom="36dp"
      android:background="#3fffffff"
      android:drawableLeft="@drawable/name_icon"
      android:ems="10"
      android:hint="@string/name"
      android:inputType="text"
      android:paddingLeft="10sp"
      app:layout_constraintBottom_toTopOf="@+id/add_email"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:ignore="MissingConstraints" />

  <EditText
      android:id="@+id/add_email"
      android:layout_width="337dp"
      android:layout_height="48dp"
      android:layout_marginBottom="36dp"
      android:background="#3fffffff"
      android:drawableLeft="@drawable/email_icon"
      android:ems="10"
      android:hint="@string/email"
      android:inputType="textEmailAddress"
      android:paddingLeft="10sp"
      app:layout_constraintBottom_toTopOf="@+id/add_roll_number"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:ignore="MissingConstraints" />

  <EditText
      android:id="@+id/add_roll_number"
      android:layout_width="337dp"
      android:layout_height="48dp"
      android:layout_marginBottom="36dp"
      android:background="#3fffffff"
      android:drawableLeft="@drawable/roll_number_icon"
      android:ems="10"
      android:hint="Roll Number"
      android:inputType="number"
      android:paddingLeft="10sp"
      app:layout_constraintBottom_toTopOf="@+id/add_password"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:ignore="MissingConstraints" />

  <EditText
      android:id="@+id/add_password"
      android:layout_width="337dp"
      android:layout_height="48dp"
      android:layout_marginBottom="48dp"
      android:background="#3fffffff"
      android:drawableLeft="@drawable/password_icon"
      android:drawableRight="@drawable/password_view"
      android:ems="10"
      android:hint="Password"
      android:paddingLeft="10sp"
      android:paddingRight="10dp"
      android:inputType="textPassword"
      android:longClickable="false"
      app:layout_constraintBottom_toTopOf="@+id/add_new_student_btn"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/add_new_student_btn"
      android:layout_width="304dp"
      android:layout_height="56dp"
      android:layout_marginBottom="152dp"
      android:background="@drawable/student_sign_up_round_button"
      android:text="save"
      android:textColor="@color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.588"
      app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>